                    <Rectangle Height="25" Width="60"/>
                    <Label Content="Password:" Height="40" Width="135" Background="{x:Null}" FontWeight="Bold" FontSize="20" />
                    <Rectangle Height="35" Width="60"/>
                    <Label Content="Email:" Height="40" Width="135" Background="{x:Null}" FontWeight="Bold" FontSize="20" />

                </ListBox>
                <ListBox BorderThickness="0" HorizontalAlignment="Left" Height="255" Margin="275,0,0,0" VerticalAlignment="Top" Width="300" Background="{x:Null}">
                    <Rectangle Height="25" Width="260"/>
                    <TextBox x:Name="_Username" Height="25" Width="260" BorderBrush="Black" BorderThickness="0,0,0,1" Background="Transparent" FontSize="18" FontWeight="Bold"/>
                    <Rectangle Height="55" Width="260"/>
