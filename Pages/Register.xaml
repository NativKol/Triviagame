        <Grid Height="195" Margin="9,9,9,0" VerticalAlignment="Top">
            <Grid Height="265" Margin="145,215,145,-285" VerticalAlignment="Top">
                <Grid.RowDefinitions>
                    <RowDefinition Height="59*"/>
                    <RowDefinition/>
                </Grid.RowDefinitions>
                <ListBox BorderThickness="0" HorizontalAlignment="Left"  Height="255" Margin="10,0,0,0" VerticalAlignment="Top" Width="110" Background="{x:Null}" Opacity="100" Grid.RowSpan="2">
